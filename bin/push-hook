#!/usr/bin/env python
import sys
import os

from stretch import models

# Calling script: post-receive
#
# #!/bin/sh
# read oldrev newrev refname
# /path/to/push-hook $newrev system_name

if __name__ == '__main__':
    os.environ['DJANGO_SETTINGS_MODULE'] = 'stretch.settings'
    models.Release.create_from_sources.delay(sys.argv[2], {'ref': sys.argv[1]})
